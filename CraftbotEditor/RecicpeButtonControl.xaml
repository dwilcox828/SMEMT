<UserControl x:Class="CraftbotEditor.RecipeButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CraftbotEditor"
             mc:Ignorable="d" 
             d:DesignHeight="108" d:DesignWidth="108">
    <Grid>
        <Image x:Name="RecipeNormalImage" Source="RecipeNormal.png" Visibility="Visible"/>
        <Image x:Name="RecipeSelectedImage" Source="RecipeSelected.png" Visibility="Hidden"/>
        <!-- The easier, definitely lazier way: moving the icon map -->
        <local:ItemImage x:Name="ItemImage"/>
        <Button x:Name="SelectionButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Height="108" Opacity="0" Click="SelectionButton_Click"/>
    </Grid>
</UserControl>
