<UserControl x:Class="CraftbotEditor.LabelledItemImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CraftbotEditor"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="108">
    <Grid>
        <local:ItemImage x:Name="ItemImage"/>
        <TextBlock x:Name="ItemLabel" Text="Label" FontFamily="Shentox" FontSize="12" Margin="0,103,0,3" Background="#00000000" Foreground="White" FontStretch="SemiExpanded" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="108" TextAlignment="Center" />

    </Grid>
</UserControl>
